<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DiScrollView_LayoutParams">
        <attr name="scroll_alpha" format="boolean" />
        <attr name="scroll_scaleX" format="boolean" />
        <attr name="scroll_scaleY" format="boolean" />
        <attr name="fromBgColor" format="color"/>
        <attr name="toBgColor" format="color"/>
        <attr name="scroll_translation"/>
    </declare-styleable>

    <attr name="scroll_translation">
        <flag name="fromLeft" value="0"/>
        <flag name="fromTop" value="1"/>
        <flag name="fromRight" value="2"/>
        <flag name="fromBottom" value="3"/>
    </attr>
</resources>
